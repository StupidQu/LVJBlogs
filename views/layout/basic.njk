<html>
  <head>
    <title>{{ pagetitle }} - LVJ Blogs</title>
    <script src="/static/jquery/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/fomantic-ui/semantic.min.css">
    <script src="/static/fomantic-ui/semantic.min.js"></script>
  </head>
  <body>
    <div class="ui borderless top fixed menu">
      <div class="ui container">
        <a style="margin-left: -10px;" class="item" href="/"><i class="home icon"></i>首页</a>
        <a class="item" href="/file/"><i class="file icon"></i>文件</a>
        {% if user %}
        <div class="right item">{{ user.username }}</div>
        {% else %}
        <div style="padding-right: 0;" class="right item">
          <a href="/user/login" class="ui button">登录</a>
          <a style="margin-left: 1em;" href="/user/register" class="ui primary button">注册</a>
        </div>
        {% endif %}
      </div>
    </div>
    <div style="padding-top: 5em;" class="ui container">
      {% block content %}
      {% endblock %}
    </div>
  </body>
</html>